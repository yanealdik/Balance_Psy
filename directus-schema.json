{
  "collections": [
    {
      "collection": "articles",
      "meta": {
        "collection": "articles",
        "icon": "article",
        "note": "Content management for BalancePsy articles",
        "display_template": "{{title}}",
        "hidden": false,
        "singleton": false,
        "translations": null,
        "archive_field": "status",
        "archive_value": "archived",
        "unarchive_value": "draft",
        "sort_field": null
      },
      "schema": {
        "name": "articles"
      }
    }
  ],
  "fields": [
    {
      "collection": "articles",
      "field": "id",
      "type": "integer",
      "schema": {
        "is_primary_key": true,
        "has_auto_increment": true
      },
      "meta": {
        "hidden": true,
        "interface": "input",
        "readonly": true
      }
    },
    {
      "collection": "articles",
      "field": "status",
      "type": "string",
      "schema": {
        "default_value": "draft",
        "max_length": 20
      },
      "meta": {
        "width": "full",
        "options": {
          "choices": [
            {
              "text": "Draft",
              "value": "draft"
            },
            {
              "text": "Published",
              "value": "published"
            },
            {
              "text": "Archived",
              "value": "archived"
            }
          ]
        },
        "interface": "select-dropdown",
        "display": "labels",
        "display_options": {
          "choices": [
            {
              "text": "Draft",
              "value": "draft",
              "foreground": "#FFFFFF",
              "background": "#FFA500"
            },
            {
              "text": "Published",
              "value": "published",
              "foreground": "#FFFFFF",
              "background": "#00C897"
            },
            {
              "text": "Archived",
              "value": "archived",
              "foreground": "#FFFFFF",
              "background": "#B0B0B0"
            }
          ]
        }
      }
    },
    {
      "collection": "articles",
      "field": "title",
      "type": "string",
      "schema": {
        "max_length": 255,
        "is_nullable": false
      },
      "meta": {
        "width": "full",
        "interface": "input",
        "required": true,
        "note": "Article title"
      }
    },
    {
      "collection": "articles",
      "field": "slug",
      "type": "string",
      "schema": {
        "max_length": 255,
        "is_unique": true,
        "is_nullable": false
      },
      "meta": {
        "width": "full",
        "interface": "input",
        "required": true,
        "note": "URL-friendly identifier (unique)"
      }
    },
    {
      "collection": "articles",
      "field": "excerpt",
      "type": "text",
      "meta": {
        "width": "full",
        "interface": "input-multiline",
        "note": "Short description (preview)"
      }
    },
    {
      "collection": "articles",
      "field": "content",
      "type": "text",
      "meta": {
        "width": "full",
        "interface": "input-rich-text-html",
        "note": "Full article content (HTML)"
      }
    },
    {
      "collection": "articles",
      "field": "category",
      "type": "string",
      "schema": {
        "max_length": 50,
        "is_nullable": false
      },
      "meta": {
        "width": "half",
        "options": {
          "choices": [
            {
              "text": "Эмоции",
              "value": "emotions"
            },
            {
              "text": "Самопомощь",
              "value": "self_help"
            },
            {
              "text": "Отношения",
              "value": "relationships"
            },
            {
              "text": "Стресс",
              "value": "stress"
            },
            {
              "text": "Другое",
              "value": "other"
            }
          ]
        },
        "interface": "select-dropdown",
        "required": true
      }
    },
    {
      "collection": "articles",
      "field": "read_time",
      "type": "integer",
      "meta": {
        "width": "half",
        "interface": "input",
        "note": "Estimated reading time in minutes"
      }
    },
    {
      "collection": "articles",
      "field": "image_url",
      "type": "string",
      "schema": {
        "max_length": 500
      },
      "meta": {
        "width": "full",
        "interface": "input",
        "note": "Article cover image URL"
      }
    },
    {
      "collection": "articles",
      "field": "created_at",
      "type": "timestamp",
      "schema": {
        "default_value": "CURRENT_TIMESTAMP"
      },
      "meta": {
        "interface": "datetime",
        "readonly": true,
        "hidden": true,
        "special": ["date-created"]
      }
    },
    {
      "collection": "articles",
      "field": "updated_at",
      "type": "timestamp",
      "schema": {
        "default_value": "CURRENT_TIMESTAMP"
      },
      "meta": {
        "interface": "datetime",
        "readonly": true,
        "hidden": true,
        "special": ["date-updated"]
      }
    }
  ],
  "permissions": [
    {
      "role": null,
      "collection": "articles",
      "action": "read",
      "fields": ["id", "status", "title", "slug", "excerpt", "content", "category", "read_time", "image_url", "created_at"],
      "permissions": {
        "status": {
          "_eq": "published"
        }
      },
      "validation": null
    }
  ]
}